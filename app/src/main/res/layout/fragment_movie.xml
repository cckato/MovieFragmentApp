<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_movie_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000"
    tools:context="com.replaybank.moviefragmentapp.ui.fragment.MovieFragment">

    <ImageView
        android:id="@+id/imageView_thumb"
        android:src="@drawable/ph_320x180"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_centerInParent="true" />

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar" />

    <com.replaybank.moviefragmentapp.ui.view.MovieController
        android:id="@+id/movie_controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>
